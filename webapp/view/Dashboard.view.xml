<mvc:View
    controllerName="armoryx.armoryx.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="dashboardPage" title="ArmoryX Dashboard">
        <headerContent>
            <Button icon="sap-icon://log" tooltip="Logout" press=".onLogout"/>
        </headerContent>
        <content>
            <FlexBox
                justifyContent="Center"
                alignItems="Center"
                wrap="Wrap"
                class="sapUiSmallMargin"
                items="{weapons>/categories}">
                <!-- This FlexBox creates a tile for each item in the 'categories' array -->
                <GenericTile
                    class="sapUiTinyMargin"
                    header="{weapons>name}"
                    subheader="{weapons>description}"
                    press=".onNavToCategory">
                    <TileContent footer="View Collection">
                        <content>
                            <core:Icon
                                src="{weapons>icon}"
                                size="2.5rem"
                                color="{weapons>color}"
                                class="sapUiMediumMarginBottom"/>
                        </content>
                    </TileContent>
                </GenericTile>
            </FlexBox>
        </content>
    </Page>
</mvc:View>